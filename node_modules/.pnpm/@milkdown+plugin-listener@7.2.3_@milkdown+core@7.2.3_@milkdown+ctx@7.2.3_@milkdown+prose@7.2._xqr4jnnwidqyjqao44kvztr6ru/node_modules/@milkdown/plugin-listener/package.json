{
  "name": "@milkdown/plugin-listener",
  "type": "module",
  "version": "7.2.3",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Milkdown/milkdown.git",
    "directory": "packages/plugin-listener"
  },
  "keywords": [
    "milkdown",
    "milkdown plugin"
  ],
  "sideEffects": false,
  "main": "./lib/index.es.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib",
    "src"
  ],
  "peerDependencies": {
    "@milkdown/core": "^7.2.0",
    "@milkdown/ctx": "^7.2.0",
    "@milkdown/prose": "^7.2.0"
  },
  "dependencies": {
    "@types/lodash.debounce": "^4.0.7",
    "lodash.debounce": "^4.0.8",
    "tslib": "^2.5.0",
    "@milkdown/utils": "7.2.3"
  },
  "devDependencies": {
    "@milkdown/core": "7.2.3",
    "@milkdown/ctx": "7.2.3",
    "@milkdown/prose": "7.2.3"
  },
  "nx": {
    "targets": {
      "build": {
        "outputs": [
          "packages/plugin-listener/lib"
        ],
        "dependsOn": [
          {
            "target": "build",
            "projects": "dependencies"
          }
        ]
      },
      "tsc": {
        "outputs": [],
        "dependsOn": [
          {
            "target": "build",
            "projects": "dependencies"
          }
        ]
      }
    }
  },
  "scripts": {
    "start": "concurrently -n es,dts \"vite build --watch\"  \"tsc --emitDeclarationOnly --watch\"",
    "test": "vitest",
    "tsc": "tsc --noEmit && echo",
    "build": "tsc --emitDeclarationOnly && vite build"
  }
}