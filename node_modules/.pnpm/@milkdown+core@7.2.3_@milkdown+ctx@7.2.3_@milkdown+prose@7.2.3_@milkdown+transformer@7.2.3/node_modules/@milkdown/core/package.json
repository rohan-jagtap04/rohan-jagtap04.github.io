{
  "name": "@milkdown/core",
  "type": "module",
  "version": "7.2.3",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Milkdown/milkdown.git",
    "directory": "packages/core"
  },
  "keywords": [
    "milkdown",
    "prosemirror",
    "remark",
    "markdown",
    "wysiwyg",
    "text editor",
    "markdown editor"
  ],
  "sideEffects": false,
  "main": "./lib/index.es.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib",
    "src"
  ],
  "peerDependencies": {
    "@milkdown/ctx": "^7.2.0",
    "@milkdown/prose": "^7.2.0",
    "@milkdown/transformer": "^7.2.0"
  },
  "dependencies": {
    "mdast-util-to-markdown": "^1.5.0",
    "remark-parse": "^10.0.1",
    "remark-stringify": "^10.0.2",
    "tslib": "^2.5.0",
    "unified": "^10.1.0",
    "@milkdown/exception": "7.2.3"
  },
  "devDependencies": {
    "@milkdown/ctx": "7.2.3",
    "@milkdown/prose": "7.2.3",
    "@milkdown/transformer": "7.2.3"
  },
  "nx": {
    "targets": {
      "build": {
        "outputs": [
          "packages/core/lib"
        ],
        "dependsOn": [
          {
            "target": "build",
            "projects": "dependencies"
          }
        ]
      },
      "tsc": {
        "outputs": [],
        "dependsOn": [
          {
            "target": "build",
            "projects": "dependencies"
          }
        ]
      }
    }
  },
  "scripts": {
    "start": "concurrently -n es,dts \"vite build --watch\"  \"tsc --emitDeclarationOnly --watch\"",
    "test": "vitest",
    "tsc": "tsc --noEmit && echo",
    "build": "tsc --emitDeclarationOnly && vite build"
  }
}